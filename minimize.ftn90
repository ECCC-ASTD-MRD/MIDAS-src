subroutine minimize(lcolumng,lobsSpaceData)
  use minimization_mod
  use obsSpaceData_mod
  use columnData_mod
  implicit none
  !
  !Purpose:
  ! Set the CMA for a minimization, pickup the appropriate minimizer
  ! based on CMINMODE value and reset the CMA for post processing
  !
  !Author  : S. Pellerin *ARMA/MSC  Sept, 2005
  !                                    in 1-Obs case.
#include "comlun.cdk"
#include "partov.cdk"
#include "comtov.cdk"
#include "comvfiles.cdk"
#include "cvcord.cdk"
#include "comgdpar.cdk"
#include "comfilt.cdk"
  !Local declarations
  type(struct_obs) :: lobsSpaceData
  type(struct_columnData) :: lcolumn,lcolumng
  integer :: indic,ierr

  write(*,*) '--------------------------------'
  write(*,*) '--Starting subroutine minimize--'
  write(*,*) '--------------------------------'

  call col_allocate(lcolumn,col_getNumCol(lcolumng),col_getNumLev(lcolumng,'MM'),col_getNumLev(lcolumng,'TH'))

  write(*,*) 'PRDATABIN: For 4D increment'
  call prdatabin(lobsSpaceData,nstepobsinc)
  call sutimeinterp(lobsSpaceData,lcolumn)

  call setcma(lobsSpaceData)

  call min_minvar(lnlvtov,lpcon,lrestart,cpconf,lcolumn,lcolumng,lobsSpaceData)

  call rsetcma(lobsSpaceData)

  call cprob8to4(lobsSpaceData)
  DO INDIC =1,1
     CALL obs_prnthdr(lobsSpaceData,indic,NULOUT)
     CALL obs_prntbdy(lobsSpaceData,indic,NULOUT)
  END DO

  call col_deallocate(lcolumn)

end subroutine minimize
