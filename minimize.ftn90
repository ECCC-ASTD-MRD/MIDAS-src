subroutine minimize(columng,obsSpaceData)
  use minimization_mod
  use obsSpaceData_mod
  use columnData_mod
  use timeCoord_mod
  use rmatrix_mod
  implicit none
  !
  !Purpose:
  ! Set the CMA for a minimization, pickup the appropriate minimizer
  ! and reset the CMA for post processing
  !
  !Author  : S. Pellerin *ARMA/MSC  Sept, 2005
  !                                    in 1-Obs case.
  !Local declarations
  type(struct_obs) :: obsSpaceData
  type(struct_columnData) :: column,columng
  integer :: get_max_rss

  write(*,*) '--------------------------------'
  write(*,*) '--Starting subroutine minimize--'
  write(*,*) '--------------------------------'
  write(*,*) 'Memory Used: ',get_max_rss()/1024,'Mb'
  call tmg_start(3,'MIN')

  call col_setVco(column,col_getVco(columng))
  call col_allocate(column,col_getNumCol(columng),mpi_local=.true.)
  call col_copyLatLon(columng,column)

  write(*,*) 'PRDATABIN: For 4D increment'
  call prdatabin(obsSpaceData,tim_nstepobsinc)
  call tim_sutimeinterp(obsSpaceData)

  call min_minvar(column,columng,obsSpaceData)

  call col_deallocate(column)
  call tmg_stop(3)

  ! Memory deallocations for non diagonal R matrices for radiances
  call rmat_cleanup()
  write(*,*) 'Memory Used: ',get_max_rss()/1024,'Mb'
  write(*,*) '--Done subroutine minimize--'

end subroutine minimize
