#!/bin/ksh
#.*****************************************************************************
#.
#.     JOB NAME - interpEnsTrials
#.
#.     STATUS - OPERATIONAL - ESSENTIAL
#.
#.     DESCRIPTION - This job interpolates the ensemble trials imported in the suite
#.                   by getEnsTrials to the vertical levels of the analysis.
#.
#.*****************************************************************************

if [ "${ENVAR_enstrials_interpolation_in_VAR}" != yes ]; then
    ## On va chercher la machine de la tache 'VAR'
    ##     getVARresources_host
    getVARresources host
    if [ "${getVARresources_host}" = "${TRUE_HOST}" ]; then
	is_local=yes
	output=$(${TASK_BIN}/true_path ${TASK_OUTPUT})
    else
	is_local=no
	## La variable ${output} sort de cette fonction
	prepare_destination_directory
    fi

    . interpEnsTrials.dot ${output} ${is_local}
fi
