#!/bin/ksh

if [ -L ${TASK_OUTPUT}/live_results ]; then
    target=$(readlink ${TASK_OUTPUT}/live_results)
    ssh ${target%%:*} "set -ex; if [ -d ${target##*:} ]; then rm -r ${target##*:}; mkdir ${target##*:}; fi"
else
    target=${TASK_OUTPUT}/live_results
fi

${TASK_BIN}/remote_copy -r ${TASK_INPUT}/live_results/ ${target}
