      SUBROUTINE SUALOBS(KULOUT,lobsSpaceData)
      use modmask, only : lmaskpp_in, lmaskpp_out,lmasksf_in,lmasksf_out
      use modmask, only : lmask,lmaskto,lmaskro,lmaskzp,ldiagpp
      use modmask, only : ldiagsf, ldiag, lmaskgp
      use obsSpaceData_mod
#if defined (DOC)
*
***s/r SUALOBS  - Memory allocation for obs. related arrays
*
*Author  : P. Gauthier *ARMA/AES  June 9, 1992
*Revision:
*
#endif
C
      IMPLICIT NONE
      type(struct_obs) :: lobsSpaceData
      INTEGER KULOUT, IERR
      INTEGER ILEN, ilen8
      INTEGER iloc, jvar
C
      WRITE(KULOUT,FMT='(//,6(" ***********"))')
      WRITE(KULOUT,*)'     SUALOBS:  Memory allocation of the',
     S     ' observation arrays'
      WRITE(KULOUT,FMT='(6(" ***********"))')
C
C*    .   1.1 Auxiliary state
C     .       ---------------
C
 110  CONTINUE
C
C
C*    2. Arrays containing the observations themselves
C     .   (COMDECK COMOBA)
C     .  ---------------------------------------------
C
*     Memory allocation for lobsSpaceData (except for *_g arrays)
      call obs_initialize(lobsSpaceData)
!
      allocate(lmaskpp_in(obs_numbody_max(lobsSpaceData)))
      allocate(lmaskpp_out(obs_numbody_max(lobsSpaceData)))
      lmaskpp_in = .false.
      lmaskpp_out = .false.
      allocate(lmasksf_in(obs_numbody_max(lobsSpaceData)))
      allocate(lmasksf_out(obs_numbody_max(lobsSpaceData)))
      lmasksf_in = .false.
      lmasksf_out = .false.
      allocate(lmask(obs_numbody_max(lobsSpaceData)))
      allocate(lmaskto(obs_numbody_max(lobsSpaceData)))
      lmaskto = .false.
      allocate(lmaskro(obs_numbody_max(lobsSpaceData)))
      allocate(lmaskzp(obs_numbody_max(lobsSpaceData)))
      allocate(ldiagpp(obs_numbody_max(lobsSpaceData)))
      lmaskzp = .false.
      lmaskro = .false.
      ldiagpp = .false.
      allocate(ldiagsf(obs_numbody_max(lobsSpaceData)))
      allocate(ldiag(obs_numbody_max(lobsSpaceData)))
      ldiagsf = .false.
      ldiag = .false.
      allocate(lmaskgp(obs_numbody_max(lobsSpaceData)))
      lmaskgp = .false.
      WRITE(KULOUT,FMT='(/,"  Arrays in COMOBA are allocated",
     S     " the following space:")')

      RETURN
      END


