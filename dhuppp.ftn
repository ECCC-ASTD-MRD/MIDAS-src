      SUBROUTINE DHUPPP(CDFAM)
#if defined (DOC)
*
***s/r DHUPPP  - Computation of the residuals of the LQ observations
*                FOR UPPER AIR DATAFILES
*
*Author  : D. ANSELMO (MRB/ARMA) October 2004
*          (modified copy of DOBSPPP.ftn)
*Revision:
*
**    Purpose: - Computation of the LQ innovations.
*
*
*Arguments
*     CDFAM: FAMILY OF OBSERVATION
*
#endif
      use obsSpaceData_mod
      use columnData_mod
      use bufr
      IMPLICIT NONE
      CHARACTER *2 CDFAM
*implicits
#include "comlun.cdk"
#include "comdimo.cdk"
 
#include "cvcord.cdk"
#include "comfilt.cdk"
#include "cparbrp.cdk"
*
      INTEGER IOBS,IK,IBEGIN,ILAST,IPRES
      INTEGER J,JDATA
      REAL*8 ZVAR,ZOER
      REAL*8 ZWB,ZWT
      REAL*8 ZLEV,ZPT,ZPB
      LOGICAL LLOK,LLPRINT
C
cc      LLPRINT = .TRUE.
      LLPRINT = .FALSE.
C
      IF (LLPRINT) print*,' ---dhuppp----------------'
      DO J = 1,NFILES
         IF ( (CFAMTYP(J) .EQ. CDFAM) .AND.( NBEGINTYP(J) .GT. 0)) THEN
            IBEGIN=NBEGINTYP(J)
            ILAST=NENDTYP(J)
C
C*    1. Computation of (HX - Z)/SIGMA
C     .  -----------------------------
C
 100  CONTINUE
C
C     Process all data within the domain of the model
C     Exclude levels above RLIMLVHU as it is done with T-Td in s/r suprep
C
            DO JDATA=IBEGIN,ILAST
              IF ( obs_elem_i(obsSpaceData,'VNM ',JDATA) .EQ. BUFR_NEHU  .AND.
     &             obs_elem_i(obsSpaceData,'XTR ',JDATA) .EQ. 0     .AND.
     &             obs_elem_i(obsSpaceData,'VCO ',JDATA) .EQ. 2    ) THEN
                IPRES= NINT(obs_elem_r8(obsSpaceData,'PPP ',JDATA))
                call obs_set_r8(obsSpaceData,'OMA ',JDATA, PPMIS)
                IF ( IPRES .GE. NINT(RLIMLVHU*100) ) THEN
                  IOBS = obs_elem_i(obsSpaceData,'OBS ',JDATA)
                  ZVAR = obs_elem_r8(obsSpaceData,'VAR ',JDATA)
                  ZOER = obs_elem_r8(obsSpaceData,'OER ',JDATA)
                  ZLEV = obs_elem_r8(obsSpaceData,'PPP ',JDATA)
                  IK   = obs_elem_i(obsSpaceData,'LYR ',JDATA)
                  ZPT  = COLUMNHR%RPPOBS(IK,IOBS)
                  ZPB  = COLUMNHR%RPPOBS(IK+1,IOBS)
                  ZWB  = LOG(ZLEV/ZPT)/LOG(ZPB/ZPT)
                  ZWT  = 1. - ZWB
C
                  call obs_set_r8(obsSpaceData,'OMA ',JDATA, 
     +                          ( ZWB*columnhr%hu(IK+1,IOBS)
     +                          + ZWT*columnhr%hu(IK,IOBS) - ZVAR ) / ZOER)

                  IF ( LLPRINT ) THEN
                    write(nulout,*)' -------------------------'
                    write(nulout,*)'   jdata  = ',JDATA
                    write(nulout,*)'   iobs   = ',IOBS
                    write(nulout,*)'   zlev   = ',ZLEV
                    write(nulout,*)'   ik     = ',IK
                    write(nulout,*)'   zvar   = ',ZVAR
                    write(nulout,*)'   zoer   = ',ZOER
                    write(nulout,*)'   columnhr%hu(ik,iobs) = ',columnhr%hu(IK,IOBS)
                    write(nulout,*)'   columnhr%hu(ik+1,iobs) = ',columnhr%hu(IK+1,IOBS)
                    write(nulout,*)'   O-P    = ',-obs_elem_r8(obsSpaceData,'OMA ',JDATA)*ZOER
                    write(nulout,*)' -------------------------'
                  ENDIF

                ENDIF
              ENDIF
C
            END DO
 200  CONTINUE
C
C     Process all upper air data data below model's orography
C
C   ..section removed not necessary for LQ -armadan Oct 2004
c
 300  CONTINUE
C
      ENDIF
      END DO
C--------------------------------------------------------------------
*
      RETURN
      END
