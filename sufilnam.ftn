       CLVALU(8) = '' 
       CLVALU(9) = './preconin'  

       CLVALU(10) = 'brpuan'  
       CLVALU(11) = 'brpuas'  
       CLVALU(12) = 'brpai'  
       CLVALU(13) = 'brpain'  
       CLVALU(14) = 'brpais'  
       CLVALU(15) = 'brpsfc'  
       CLVALU(16) = 'brpsf'  
       CLVALU(17) = 'brptov'  
       CLVALU(18) = 'brpsw'  
       CLVALU(19) = 'brpswgoes9'  
